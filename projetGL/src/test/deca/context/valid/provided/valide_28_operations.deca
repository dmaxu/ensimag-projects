    // Test 2a: Opérations Arithmétiques Entières

    int x = 10;
    int y = 5;

    // Opérations de base
    int sum = x + y;
    int difference = x - y;
    int product = x * y;
    int division = x / y; // division entière
    int modulo = x % y;

    // Opérations complexes
    int complexCalc = (x + y) * y - (x / y);

    // Impressions des résultats
    println("Sum: " , sum);
    println("Difference: " , difference);
    println("Product: " , product);
    println("Division: " , division);
    println("Modulo: " , modulo);
    println("Complex Calculation: " , complexCalc);
}
